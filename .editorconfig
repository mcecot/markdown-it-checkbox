# EditorConfig is awesome: http://EditorConfig.org

# force top-most EditorConfig file
root = true

# Windows-style newlines with no newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,coffee,litcoffee}]
indent_style = space
